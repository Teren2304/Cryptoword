              +timer
              hr.hr
              +range
              +button('Buy token').button--primary

          .row(style="margin-top: 50px")
            .col-12.col-md-3.padding-vertical
              +counter('859+', 'Projects Consulted')
            .col-12.col-md-3.padding-vertical
              +counter('678+', 'Mobile Apps')
            .col-12.col-md-3.padding-vertical
              +counter('345+', 'Instant Exchange')
            .col-12.col-md-3.padding-vertical
              +counter('209+', 'Easy & secure')

    section.section#checklist
      .container-fluid
        .container
          .row
            .col-12.col-md-6.padding-vertical
