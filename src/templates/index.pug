                .col-12.col-sm-6.padding-vertical
                  .row.f-align-center
                    .col-2.col-sm-4.padding-vertical
                      img(src="https://ld-wp.template-help.com/wordpress_prod-19263/v1/wp-content/uploads/2018/07/icon4.svg").img
                    .col-10.col-sm-8.padding-vertical
                      h4.h4.margin Fungibility
                      p Attribute of any money
                .col-12.padding-vertical
                  +button('Start Token').button--primary

    section.section#pricing
      .container-fluid
        .container
          .row
            .col-12.col-lg-6.padding-vertical
              +subtitle('How to buy Tokens', 'With its help you can foresee how much you wish to invest and how much profit you will receive.').subtitle--left
              +table
              +payments
              +button('Buy Tokens Now!').button--primary
            .col-12.col-lg-6.padding-vertical
              .row
                .col-12.col-sm-6
                  +pricing-table(3).pricing-table--primary
                .col-12.col-sm-6
                  +pricing-table(2).pricing-table--secondary

    section.section#teamship
      .container-fluid
        .container
          .row
            .col-12.padding-vertical
              +subtitle('Our Teamship', 'Bitcoin is a virtual currency that uses cryptographic encryption system.')
            .col-12.padding-vertical
              .row
                .col-12.col-md-6.col-lg-3.padding-vertical
                  +team-member('https://ld-wp.template-help.com/wordpress_prod-19263/v1/wp-content/uploads/2018/07/team-1.png', 'Albert Green', 'With an expertise in strategy and business model')
