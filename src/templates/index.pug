block content
  main
    section.section#launch(style="background-position: center center")
      .container-fluid
        .container
          .row.f-justify-spaced
            .col-12.col-md-5.padding-vertical
              +subtitle('The Number of Token Sales Keeps Rising').subtitle--left
              .list
                .list__item
                  p Positioning - we do benchmarking
                .list__item
                  p Roadshow - we organize private investor
              +button('Whitepaper').button--primary
            .col-12.col-md-5.padding-vertical
              .align-center
